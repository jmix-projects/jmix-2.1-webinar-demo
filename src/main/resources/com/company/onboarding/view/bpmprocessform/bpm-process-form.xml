<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bpmProcessForm.title">
    <data>
        <collection id="bookDc" class="com.company.onboarding.entity.Book">
            <fetchPlan extends="_base"/>
            <loader id="bookDl" readOnly="true">
                <query><![CDATA[select e from Book e]]></query>
            </loader>
        </collection>
        <collection id="genreDc" class="com.company.onboarding.entity.Genre">
            <fetchPlan extends="_base"/>
            <loader id="genreDl" readOnly="true">
                <query><![CDATA[select e from Genre e]]></query>
            </loader>
        </collection>
    </data>
    <layout>
        <formLayout>
            <entityPicker id="book" label="Book" metaClass="Book">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="genre" label="Genre" metaClass="Genre">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField datatype="string" id="title" label="Title"/>
        </formLayout>
        <hbox id="actionsPanel">
            <button id="submitBtn" icon="CHECK" text="Submit"/>
            <button id="rejectBtn" icon="BAN" text="Reject"/>
        </hbox>
    </layout>
</view>